<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#fcc590"
    tools:context=".login_activityy">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"


            android:drawablePadding="10dp"


            android:textColorHint="#212121"
            android:textColorHighlight="#212121"

            android:inputType="textEmailAddress"
            android:layout_marginTop="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/editbox"
            android:gravity="center"
            android:textColor="#212121"
            android:id="@+id/email_login"
            android:textSize="23sp"

            android:hint="enter email"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editbox"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:id="@+id/password_login"
            android:textColor="#212121"
            android:textColorHint="#212121"
            android:inputType="textPassword"
            android:textSize="23sp"
            android:hint="enter password"
            />

        <Button
            android:id="@+id/login_bt"
            android:layout_width="143dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#212121"

            android:background="@drawable/buttons"
            android:text="login" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:id="@+id/tvloginerror"/>

        <!--
           emergency contacts
                             -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#212121"
            android:layout_gravity="center"
            android:id="@+id/tvcontact2"
            android:text="1st contact"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/editbox"
            android:textColorHint="#212121"
            android:hint="enter contact name"
            android:layout_marginEnd="20dp"
            android:id="@+id/name"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textColorHint="#212121"
            android:background="@drawable/editbox"
            android:hint="enter contact email"
            android:layout_marginEnd="20dp"
            android:id="@+id/email"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editbox"
            android:textColorHint="#212121"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:hint="enter contact phone number"
            android:id="@+id/phnno"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter contact address"
            android:background="@drawable/editbox"
            android:textColorHint="#212121"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/city"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#212121"
            android:layout_gravity="center"
            android:id="@+id/tvcontact1"
            android:text="2nd contact"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter contact name"
            android:layout_marginTop="5dp"
            android:textColorHint="#212121"
            android:background="@drawable/editbox"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/name2"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:hint="enter contact email"
            android:layout_marginTop="5dp"
            android:background="@drawable/editbox"
            android:textColorHint="#212121"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/email2"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/editbox"
            android:hint="enter contact phone number"
            android:textColorHint="#212121"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/phnno2"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColorHint="#212121"
            android:background="@drawable/editbox"
            android:layout_marginStart="20dp"
            android:hint="enter contact address"

            android:layout_marginEnd="20dp"
            android:id="@+id/city2"
            />


        <TextView
            android:layout_width="wrap_content"
            android:textColor="#212121"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:id="@+id/tvcontact3"
            android:text="3rd contact"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:background="@drawable/editbox"
            android:layout_height="wrap_content"
            android:hint="enter contact name"
            android:textColorHint="#212121"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/name3"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColorHint="#212121"
            android:background="@drawable/editbox"
            android:hint="enter contact email"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/email3"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phnno3"
            android:hint="enter contact phone number"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColorHint="#212121"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:textColorHint="#212121"
            android:layout_marginTop="5dp"
            android:background="@drawable/editbox"
            android:layout_marginEnd="20dp"
            android:hint="enter contact address"

            android:layout_height="wrap_content"
            android:id="@+id/city3"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/savecon"
            android:background="@drawable/buttons"
            android:text="save"/>





    </LinearLayout>






</ScrollView>